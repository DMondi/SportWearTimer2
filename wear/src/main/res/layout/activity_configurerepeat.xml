<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

                <TextView
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:gravity="center_horizontal"
                    android:id="@+id/repeatCount_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <TextView
                    android:textSize="30sp"
                    android:textColor="@color/timer_text"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/repeatCount"
                    android:background="@color/timer_background"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:gravity="center_horizontal"
                    android:id="@+id/repeatCount_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp">

            <TextView
                android:textSize="30sp"
                android:textColor="@color/text"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/label_repeatCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@plurals/settings_repeat" />
        </LinearLayout>

    </LinearLayout>

        <Button
            android:textColor="@color/text"
            android:id="@+id/button_ok"
            android:background="@drawable/button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/button_ok" />
</LinearLayout>
    </FrameLayout>

</android.support.wearable.view.BoxInsetLayout>